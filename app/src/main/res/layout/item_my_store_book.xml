<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/load_img_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_shade"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.7"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_book"
        app:layout_constraintEnd_toEndOf="@+id/iv_book"
        app:layout_constraintStart_toStartOf="@+id/iv_book"
        app:layout_constraintTop_toTopOf="@+id/iv_book" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#34314C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_book"
        app:layout_constraintStart_toStartOf="@+id/iv_book"
        app:layout_constraintTop_toBottomOf="@+id/iv_book" />

    <TextView
        android:id="@+id/tv_integral_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="积分"
        android:textColor="#FF3542"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/iv_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_course_name" />

    <TextView
        android:id="@+id/tv_exchanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="已兑换0件"
        android:textColor="#7E849D"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/iv_book"
        app:layout_constraintTop_toBottomOf="@+id/tv_integral_num" />
</android.support.constraint.ConstraintLayout>